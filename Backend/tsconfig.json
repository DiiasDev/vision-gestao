{
  "compilerOptions": {
    /* =========================
       Estrutura do Projeto
    ========================= */
    "rootDir": "./src",
    "outDir": "./dist",

    /* =========================
       Ambiente Node
    ========================= */
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es2022",
    "lib": ["es2022"],
    "types": ["node"],

    /* =========================
       Sa√≠da
    ========================= */
    "sourceMap": true,
    "declaration": false,

    /* =========================
       Tipagem Estrita
    ========================= */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* =========================
       Compatibilidade ESM
    ========================= */
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "moduleDetection": "force",

    /* =========================
       Performance
    ========================= */
    "skipLibCheck": true
  },

  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
