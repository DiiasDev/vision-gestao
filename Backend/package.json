{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "postbuild": "mkdir -p dist/database/migrations && cp src/database/migrations/*.sql dist/database/migrations/",
    "start": "node dist/server.js",
    "migrate": "DOTENV_CONFIG_PATH=.env.development tsx src/scripts/migrate.ts",
    "migrate:status": "DOTENV_CONFIG_PATH=.env.development tsx src/scripts/migrationStatus.ts",
    "migrate:prod": "DOTENV_CONFIG_PATH=.env.production tsx src/scripts/migrate.ts",
    "migrate:status:prod": "DOTENV_CONFIG_PATH=.env.production tsx src/scripts/migrationStatus.ts",
    "start:prod": "node dist/scripts/migrate.js && node dist/server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "moment": "^2.30.1",
    "pdfkit": "^0.17.1",
    "pg": "^8.18.0",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.0",
    "@types/pdfkit": "^0.17.4",
    "@types/pg": "^8.16.0",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
